<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalcButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/zero_size</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:backgroundTint">@color/green_for_night</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="rippleColor">@color/red</item>
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
    </style>

    <style name="CalcButtons.c" parent="CalcButtons">
        <item name="android:backgroundTint">@color/for_c_in_dark</item>
    </style>

    <style name="CalcPanel">
        <item name="android:layout_width">@dimen/zero_size</item>
        <item name="android:layout_height">@dimen/zero_size</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/green</item>
    </style>
</resources>