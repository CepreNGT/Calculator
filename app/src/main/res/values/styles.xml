<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalcButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_margin">@dimen/button_layout_margin</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="rippleColor">@color/red</item>
        <item name="strokeColor">@color/green_for_night</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
    </style>

    <style name="CalcButtons.C" parent="CalcButtons">
        <item name="android:backgroundTint">@color/for_c</item>
    </style>

    <style name="CalcPanel">
        <item name="android:background">@color/dark_green</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="CalcTheme" parent="Theme.Calculator">
        <item name="materialButtonStyle">@style/CalcButtons</item>
        <item name="android:textViewStyle">@style/CalcPanel</item>
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="CalcPanelRed" parent="CalcPanel">
        <item name="android:background">@color/dark_red</item>
        <item name="android:textColor">@color/light_red</item>
    </style>

    <style name="CalcButtonsRed" parent="CalcButtons">
        <item name="android:backgroundTint">@color/light_red</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/red</item>
        <item name="strokeColor">@color/dark_red</item>
    </style>

    <style name="CalcThemeRed" parent="Theme.Calculator">
        <item name="materialButtonStyle">@style/CalcButtonsRed</item>
        <item name="android:textViewStyle">@style/CalcPanelRed</item>
        <item name="android:background">@color/red</item>
    </style>

    <style name="CalcPanelBlue" parent="CalcPanel">
        <item name="android:background">@color/dark_blue</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="CalcButtonsBlue" parent="CalcButtons">
        <item name="android:backgroundTint">@color/light_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="rippleColor">@color/light_blue</item>
        <item name="strokeColor">@color/dark_blue</item>
    </style>

    <style name="CalcThemeBlue" parent="Theme.Calculator">
        <item name="materialButtonStyle">@style/CalcButtonsBlue</item>
        <item name="android:textViewStyle">@style/CalcPanelBlue</item>
        <item name="android:background">@color/blue</item>
    </style>
</resources>