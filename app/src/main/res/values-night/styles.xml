<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalcButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/zero_size</item>
        <item name="android:layout_height">@dimen/zero_size</item>
        <item name="android:layout_margin">@dimen/button_layout_margin</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:backgroundTint">@color/green_for_night</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="rippleColor">@color/red</item>
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">@dimen/stroke_width</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
    </style>

    <style name="CalcButtons.C" parent="CalcButtons">
        <item name="android:backgroundTint">@color/for_c_in_dark</item>
    </style>

    <style name="CalcPanel">
        <item name="android:layout_width">@dimen/zero_size</item>
        <item name="android:layout_height">@dimen/zero_size</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="CalcButtons.Settings" parent="CalcButtons">
        <item name="android:layout_width">@dimen/settings_width</item>
        <item name="android:layout_height">@dimen/settings_height</item>
        <item name="icon">@drawable/ic_baseline_settings_24</item>
        <item name="iconTint">@color/green</item>
    </style>

    <style name="CalcTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="materialButtonStyle">@style/CalcButtons</item>
        <item name="android:textViewStyle">@style/CalcPanel</item>
        <item name="android:background">@drawable/background</item>
    </style>
</resources>